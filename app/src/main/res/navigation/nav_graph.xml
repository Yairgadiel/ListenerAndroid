<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MyListsFragment">

    <fragment
        android:id="@+id/MyListsFragment"
        android:name="com.gy.listener.myLists.MyListsFragment"
        android:label="@string/my_lists_fragment_label"
        tools:layout="@layout/fragment_my_lists">

        <action
            android:id="@+id/action_myListsFragment_to_listAdditionFragment"
            app:destination="@id/listAdditionFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/listAdditionFragment"
        android:name="com.gy.listener.myLists.ListAdditionFragment"
        android:label="@string/list_add_fragment_label"
        tools:layout="@layout/fragment_list_addition" >
    </fragment>

    <fragment
        android:id="@+id/recordsListFragment"
        android:name="com.gy.listener.myLists.RecordsListFragment"
        android:label="@string/records_list_fragment_label"
        tools:layout="@layout/fragment_records_list" >
        <argument
            android:name="recordsListId"
            app:argType="string"
            android:defaultValue="@null"
            app:nullable="true" />
    </fragment>

    <action
        android:id="@+id/action_global_recordsListFragment"
        app:destination="@id/recordsListFragment"
        app:enterAnim="@anim/fragment_open_enter"
        app:exitAnim="@anim/fragment_open_exit"
        app:popEnterAnim="@anim/fragment_fade_enter"
        app:popExitAnim="@anim/fragment_fade_exit"
        app:popUpTo="@id/MyListsFragment">

    </action>
</navigation>